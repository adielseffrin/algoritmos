import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Elemento inicio = null, fim = null, aux = null, novo = null;
		boolean sair = false;
		Scanner in = new Scanner(System.in);
		int opcao, busca;
		// LDNO
		// inserir no inicio
		// inserir no final
		// buscar um elemento
		// excluir
		// esvaziar

		// menu
		do {
			System.out.println("Digite uma opção:\n" + "0 - Sair\n" + "1 - Inserir no inicio\n"
					+ "2 - Inserir no final\n" + "3 - Buscar\n" + "4 - Excluir\n" + "5 - Esvaziar\n" + "8 - Listar\n");
			opcao = in.nextInt();
			switch (opcao) {
			case 0:
				sair = true;
				break;
			case 1:
				novo = new Elemento();
				System.out.println("Digite um número:");
				novo.numero = in.nextInt();
				if (inicio == null) {
					// lista vazia
					inicio = novo;
					fim = novo;
				} else {
					// lista não vazia
					novo.prox = inicio;
					inicio.ant = novo;
					inicio = novo;
				}
				break;
			case 2:
				novo = new Elemento();
				System.out.println("Digite um número:");
				novo.numero = in.nextInt();
				if (inicio == null) {
					// lista vazia
					inicio = novo;
					fim = novo;
				} else {
					// lista não vazia
					fim.prox = novo;
					novo.ant = fim;
					fim = novo;
				}
				break;
			case 3:
				//buscar
				System.out.println("Digite um número para procurar:");
				busca = in.nextInt();
				aux = inicio;
				while(aux != null || aux.numero != busca) {
					aux = aux.prox;
				}
				if(aux == null)
					System.out.println("não tem");
				else 
					System.out.println("achei: "+busca);
				
				
				
				break;
			case 8:
				aux = inicio;
				// circular
				/*
				 * do { System.out.println(aux.numero); aux = aux.prox; }while(aux != inicio);
				 */
				while (aux != null) {
					System.out.print(aux.numero+" ");
					aux = aux.prox;
				}
				break;
			default:
				sair = true;
				break;
			}
		} while (!sair);

	}

}
